# RAG Second Brain Environment Variables

# RAG Home Directory (where indexed data is stored)
RAG_HOME=/home/username/.rag

# ChromaDB Settings
CHROMA_DB_PATH=${RAG_HOME}/chroma

# Logging
LOG_LEVEL=INFO
LOG_FILE=${RAG_HOME}/logs/rag.log

# Search Settings
DEFAULT_SEARCH_TYPE=hybrid
DEFAULT_TOP_K=5
USE_FALLBACK=true

# Token Optimization
MAX_RESULT_LENGTH=80
MAX_TOKENS=25000

# Japanese Processing
USE_JAPANESE_ANALYZER=true
DICTIONARY_UPDATE_INTERVAL=daily